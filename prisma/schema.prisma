generator client {
  provider = "prisma-client-js"
}

generator fabbrica {
  provider = "prisma-fabbrica"
  output   = "../fabbrica"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kurakke {
  id          String @id @default(uuid())
  name        String
  description String
  children    KurakkeChild[]
}

model KurakkeChild {
  id         String @id @default(uuid())
  name        String
  description String
  kurakkeId   String
  kurakke     Kurakke @relation(fields: [kurakkeId], references: [id])
}
